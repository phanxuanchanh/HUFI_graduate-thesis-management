@model IEnumerable<ThesisOutput>
@{
    IPagedList pagedInfo = (IPagedList)ViewData["PagedList"];
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@ViewData["PageName"]</h4>
                <p class="card-description">
                    
                </p>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th style="width:10%">#</th>
                                <th style="width:10%">@Html.DisplayNameFor(model => model.Id)</th>
                                <th style="width:30%">@Html.DisplayNameFor(model => model.Name)</th>
                                <th style="width:20%">@Html.DisplayNameFor(model => model.MaxStudentNumber)</th>
                                <th style="width:20%">Trạng thái khóa luận</th>
                                <th style="width:10%">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = 1;
                            }
                            @foreach(ThesisOutput thesis in (IEnumerable<ThesisOutput>)ViewData["PagedList"]){
                                <tr ondblclick="location.href = '@Url.Action("Details", "StudentThesis", new { id = thesis.Id })'">
                                    <td>@count</td>
                                    <td>@thesis.Id</td>
                                    <td>@thesis.Name</td>
                                    <td>@thesis.MaxStudentNumber</td>
                                    <td>
                                        @if (string.IsNullOrEmpty(thesis.ThesisGroupId))
                                        {
                                            <label class="badge badge-success">Cho phép đăng ký</label>
                                        }
                                        else
                                        {
                                            <label class="badge badge-danger">Đã có nhóm đăng ký</label>
                                        }
                                    </td> 
                                    <td>
                                        <a class="btn btn-inverse-info btn-fw" asp-action="Details" asp-controller="StudentThesis" asp-route-id="@thesis.Id">Xem</a>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row m-2">
                    @Html.PagedListPager(
                        (IPagedList)ViewData["PagedList"],
                        p => Url.Action("GetList", new {
                            page = p,
                            pageSize = pagedInfo.PageSize,
                            orderBy = @ViewData["OrderBy"],
                            orderOptions = @ViewData["OrderOptions"],
                            keyword = @ViewData["Keyword"]
                        }),
                        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions
                        {
                            UlElementClasses =  new string[] { "pagination", "custom-pagination" },
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" }
                        },
                        ajaxOptions: new AjaxOptions
                        {
                            UpdateTargetId = "dataTable",
                            InsertionMode = InsertionMode.Replace,
                            HttpMethod = "GET"
                        }))
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">

    </script>
}