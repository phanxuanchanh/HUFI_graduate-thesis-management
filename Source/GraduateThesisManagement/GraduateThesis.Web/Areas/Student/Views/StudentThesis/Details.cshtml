@model ThesisOutput;
@{
    StudentOutput student = (ViewData["AccountModel"] as StudentOutput)!;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-uppercase">@ViewData["PageName"]</h4>
                <p class="card-description">

                </p>
                <div class="m-2">
                    <h5 class="fw-bolder">Tên đề tài:</h5>
                    <p>@Model.Name</p>
                    <hr />
                    <h5 class="fw-bolder">Các mô tả, yêu cầu của đề tài:</h5>
                    <div>@Model.Description</div>
                    <hr />
                    <h5 class="fw-bolder">Các thông tin khác:</h5>
                    <hr />
                </div>

                <div class="">
                    @if (Model.StudentThesisGroup == null)
                    {
                        <a type="button" class="btn btn-primary btn-icon-text" asp-action="DoThesisRegister" asp-controller="StudentThesis" asp-route-studentId="@student.Id" asp-route-thesisId="@Model.Id">
                            <i class="mdi mdi-file-check btn-icon-prepend"></i>
                            Đăng ký đề tài này
                        </a>
                    }
                    
                    <button type="button" class="btn btn-info btn-icon-text">
                        Print
                        <i class="mdi mdi-printer btn-icon-append"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>