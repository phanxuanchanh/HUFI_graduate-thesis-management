@model ThesisRegisterInput;
@{
    StudentOutput student = (ViewData["AccountModel"] as StudentOutput)!;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-uppercase">@ViewData["PageName"]</h4>
                <p class="card-description"></p>

                <form asp-action="DoThesisRegister" asp-controller="StudentThesis" method="post">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="row g-3">

                                <div class="col-12">
                                    <label asp-for="GroupName" class="form-label"></label>
                                    <div class="input-group has-validation">
                                        <span class="input-group-text"></span>
                                        <input asp-for="GroupName" class="form-control" placeholder="Nhập vào tên nhóm" />

                                        <div class="invalid-feedback">
                                            <span asp-validation-for="GroupName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <label asp-for="GroupDescription" class="form-label"></label>
                                    <div class="input-group has-validation">
                                        <span class="input-group-text"></span>
                                        <textarea asp-for="GroupDescription" class="form-control" placeholder="Nhập vào mô tả nhóm" required style="height: 350px;">...</textarea>

                                        <div class="invalid-feedback">
                                            <span asp-validation-for="GroupDescription" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <input type="hidden" asp-for="StudentIdList" />
                            <div class="row g-3">
                                <div class="col-12">
                                    <label for="username" class="form-label">Tìm kiếm thành viên nhóm:</label>
                                    <div class="input-group has-validation">
                                        <span class="input-group-text"></span>
                                        <input type="text" class="form-control" id="Name" placeholder="Nhập vào tên nhóm" required="">
                                        <div class="invalid-feedback">
                                            Your username is required.
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <label for="username" class="form-label">Danh sách thành viên đã thêm vào nhóm:</label>
                                    <div class="input-group has-validation">
                                        <span class="input-group-text"></span>
                                        <input type="text" class="form-control" id="Name" placeholder="Nhập vào tên nhóm" required="">
                                        <div class="invalid-feedback">
                                            Your username is required.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form> 

            </div>
        </div>
    </div>
</div>