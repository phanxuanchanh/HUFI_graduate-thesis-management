@model AppPageInput

@await Component.InvokeAsync("AdminLayout_StatusArea")

<section id="basic-horizontal-layouts">
    <div class="row match-height">
        <div class="col-md-12 col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@ViewData["PageName"]</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <form asp-action="Create" class="form form-horizontal" method="post">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label asp-for="Id"></label>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input asp-for="Id" class="form-control" disabled />
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="PageName"></label>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input asp-for="PageName" class="form-control" placeholder="Nhập tên trang" />
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="ControllerName"></label>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input asp-for="ControllerName" class="form-control" placeholder="Nhập tên bộ điều khiển" />
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="ActionName"></label>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input asp-for="ActionName" class="form-control" placeholder="Nhập vào tên hành động" />
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="Area"></label>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input asp-for="Area" class="form-control" placeholder="Nhập vào tên khu vực" />
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="Path"></label>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input asp-for="Path" class="form-control" placeholder="Nhập vào đường dẫn" />
                                    </div>
                                    <div class="col-sm-12 d-flex justify-content-end">
                                        <a asp-action="Index" class="btn btn-light-secondary me-1 mb-1">Quay về danh sách</a>
                                        <button type="submit" class="btn btn-primary me-1 mb-1">Tạo mới</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
