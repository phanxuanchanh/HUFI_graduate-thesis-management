@{
    Dictionary<string, string> selectAction = new Dictionary<string, string> {
        { "GetThesesOfLecturer", "Tất cả" }, { "GetPndgThesesOfLecturer", "Đang chờ duyệt" }, { "GetRejdThesesOfLecturer", "Bị từ chối duyệt" },
        { "GetAppdThesesOfLecturer", "Đã được duyệt" }, { "GetThesesToSupv", "Đã phân công HD" }, { "GetThesesToCriticize", "Được phân công PB" },
    };
}

