@model GraduateThesis.Repository.DTO.ThesisOutput
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Input</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Chi tiết quyền : @Model.Name</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="basicInput">Mã đề tài</label>
                            <p type="text" class="form-control">@Html.DisplayFor(model => model.Id)</p>
                        </div>

                        <div class="form-group">
                            <label for="basicInput">Tên đề tài</label>
                            <p type="text" class="form-control">@Html.DisplayFor(model => model.Name)</p>
                        </div>

                        <div class="form-group">
                            <label for="basicInput">Mô tả</label>
                            <p type="text" class="form-control" id="basicInput" placeholder="Enter email">@Html.DisplayFor(model => model.Description)</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
  
        <button type="submit" form="restoreTopic" class="btn btn-primary btn-sm"><i class="fas fa-restore"></i> Khôi phục</button>
        <button type="submit" form="deleteTopic" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Xóa vĩnh viễn</button>
    <form asp-action="Restore" asp-route-thesisId="@Model.Id" id="restoreTopic" method="post">
        </form>
    <form asp-action="ForceDelete" asp-route-thesisId="@Model.Id" id="deleteTopic" method="post">
        </form>
   
</div>